@page "/Usuarios/Nuevo"
 
 <strong><em><font face=”Times New Roman”><center><h2 style="color:red;">Nuevo Usuario</h2></center></font></em></strong>
<br />
<body style="background-color:rgb(229, 231, 235 );" />
    <div class="card-header"></div>

   <EditForm Model="@user">
    <DataAnnotationsValidator />

    <hr />

    <div class="form-group row">
        <label for="Codigo" class="col-sm-2 col-form-label">
            <strong><h6 style="color:blue;"> Codigo : </h6></strong>
        </label>
        <div class="col-sm-5">
            <InputText id="Codigo" class="form-control" placeholder="Código" @bind-Value="user.Codigo" />
            <ValidationMessage For="@(() => user.Codigo)" />
        </div>
    </div>
     <div class="form-group row">
        <label for="Nombre" class="col-sm-2 col-form-label">
            <strong><h6 style="color:blue;"> Nombre : </h6></strong>
        </label>
        <div class="col-sm-5">
            <InputText id="Nombre" class="form-control" placeholder="Nombre" @bind-Value="user.Nombre" />
            <ValidationMessage For="@(() => user.Nombre)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Clave" class="col-sm-2 col-form-label">
            <strong><h6 style="color:blue;"> Clave : </h6></strong>
        </label>
        <div class="col-sm-5">
            <InputText id="Clave" class="form-control" placeholder="Clave" @bind-Value="user.Clave" type="password" />
            <ValidationMessage For="@(() => user.Clave)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="EstaActivo" class="col-sm-2 col-form-label">
            <strong><h6 style="color:blue;"> Esta Activo : </h6></strong>
        </label>
        <div class="col-sm-10">
            <InputCheckbox @bind-Value="user.EstaActivo" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Rol" class="col-sm-2 col-form-label">
            <strong><h6 style="color:blue;">Rol : </h6></strong>
        </label>
        <div class="col-sm-5">
            <InputSelect class="form-control" @bind-Value="user.Rol">
                @foreach (var rol in Enum.GetValues(typeof(Roles)))
                {
                    <option value="@rol">@rol</option>
                }
            </InputSelect>
            <ValidationMessage For="@(() => user.Rol)" />
        </div>
    </div>
    <br />


   <br />

    <div class="form-group row">

        <div class="col-md-1 col-xs-5 ">

            <input type="submit" class="btn-toolbar btn-outline-primary" value="Guardar" @onclick="Guardar" />

        </div>


        <div class="col-md-1 col-xs-5 ">
            <input type="submit" class="btn-toolbar btn-outline-danger" value="Cancelar" @onclick="Cancelar" />
        </div>
    </div>
    <div class="card-header"></div>
</EditForm>

   